<UserControl x:Class="MyUML.UML_ToolWindowControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             Background="{DynamicResource VsBrush.Window}"
             Foreground="{DynamicResource VsBrush.WindowText}"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300"
             Name="MyToolWindow">
    <Grid>
        <Menu x:Name="menu" Height="22" VerticalAlignment="Top">
            <MenuItem Header="Datei">
                <MenuItem Header="Speichern" HorizontalAlignment="Left"  InputGestureText="Strg+S"/>
                <MenuItem Header="Speichern unter..." HorizontalAlignment="Left" InputGestureText="Strg+Umschalt+S"/>
            </MenuItem>
            <MenuItem Header="UML">
                <MenuItem Header="UML importieren" HorizontalAlignment="Left"/>
                <MenuItem Header="UML exportieren" HorizontalAlignment="Left"/>
                <Separator/>
                <MenuItem Header="UML generieren" HorizontalAlignment="Left"/>
            </MenuItem>
            <MenuItem Header="Code">
                <MenuItem Header="Code generieren" HorizontalAlignment="Left"/>
            </MenuItem>
        </Menu>
        <Canvas HorizontalAlignment="Left" Height="278" Margin="0,22,0,0" VerticalAlignment="Top" Width="300"/>
    </Grid>
</UserControl>
